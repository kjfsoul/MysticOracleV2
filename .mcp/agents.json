{
  "projectName": "MysticOracleV2",
  "agents": {
    "deployment": {
      "name": "Deployment Agent",
      "description": "Handles deployment tasks",
      "enabled": true,
      "tasks": [
        {
          "name": "deploy",
          "description": "Deploy the project",
          "enabled": true,
          "schedule": "0 */4 * * *",
          "runInAwayMode": true,
          "action": {
            "type": "command",
            "command": "npm run build && npx netlify deploy --prod --auth $NETLIFY_AUTH_TOKEN --site $NETLIFY_SITE_ID",
            "cwd": "./"
          }
        }
      ]
    },
    "status": {
      "name": "Status Agent",
      "description": "Reports on project status",
      "enabled": true,
      "tasks": [
        {
          "name": "status-report",
          "description": "Generate status report",
          "enabled": true,
          "schedule": "0 */2 * * *",
          "runInAwayMode": true,
          "action": {
            "type": "script",
            "path": ".mcp/status-report.js",
            "args": []
          }
        }
      ]
    },
    "code": {
      "name": "Code Agent",
      "description": "Handles code-related tasks",
      "enabled": true,
      "tasks": [
        {
          "name": "lint",
          "description": "Lint the code",
          "enabled": true,
          "schedule": "30 */4 * * *",
          "runInAwayMode": true,
          "action": {
            "type": "command",
            "command": "npm run lint || echo 'Linting not configured'",
            "cwd": "./"
          }
        },
        {
          "name": "test",
          "description": "Run tests",
          "enabled": true,
          "schedule": "45 */4 * * *",
          "runInAwayMode": true,
          "action": {
            "type": "command",
            "command": "npm run test || echo 'Tests not configured'",
            "cwd": "./"
          }
        }
      ]
    }
  },
  "workflows": {
    "deploy-and-notify": {
      "name": "Deploy and Notify",
      "description": "Deploy the project and send notification",
      "enabled": true,
      "schedule": "0 9,13,17,21 * * *",
      "runInAwayMode": true,
      "steps": [
        {
          "agent": "code",
          "task": "lint",
          "required": false
        },
        {
          "agent": "code",
          "task": "test",
          "required": false
        },
        {
          "agent": "deployment",
          "task": "deploy",
          "required": true
        },
        {
          "agent": "status",
          "task": "status-report",
          "required": false
        }
      ]
    }
  }
}
